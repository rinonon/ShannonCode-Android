<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rinon.shannoncode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.TopActivity"
            android:theme="@style/AppTheme.CircleTransition">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ShannonCodingActivity"
            android:theme="@style/AppTheme.CircleTransition" />
        <activity android:name=".activity.EncodeDecodeActivity" />
        <activity android:name=".activity.ShannonFanoActivity" />
        <activity android:name=".activity.InformationActivity" />
        <activity android:name=".activity.AlgorithmDescriptionActivity" />
    </application>

</manifest>